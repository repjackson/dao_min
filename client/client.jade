template(name='layout')
    +nav
    +yield


template(name='mlayout')
    +yield


template(name='verification_confirmation')
    .ui.padded.grid 
        .row 
            .sixteen.wide.column 
                h1.ui.center.aligned.header your email has been verified



template(name='not_found')
    .ui.basic.center.aligned.padded.segment
        .ui.center.aligned.header page not found
        a.ui.button(href="/") 
            i.home.icon
            //- +i name='home' classes='ui inline mini image'
            |home



template(name='shortcut_modal')
    .ui.shortcut.modal
        .ui.header keyboard shortcuts
        .content
            .ui.large.list
                each shortcuts
                    .item 
                        .header #{combo}
                        .content #{action}




template(name='tag_label')
    .ui.small.basic.label.remove_tag #{this}



template(name='cloud')
    div
    .ui.inline.small.header 
        i.tag.icon
        |tags
    .ui.left.icon.input
        i.search.icon
        if selected_tags
            +inputAutocomplete settings=settings id="search" class="" autofocus='' autocomplete="off" 
        else
            input#search(type='text' autofocus='' autocomplete="off")
    if selected_tags
        #clear_tags.ui.active.icon.circular.button
            i.remove.icon
        each selected_tags
            .unselect_tag.ui.active.circular.button
                strong #{this}
    each all_tags
        .ui.compact.circular.button.select_tag(class=cloud_tag_class) 
            | #{this.name}
            small #{this.count}
    div
    .ui.small.inline.header
        i.user.icon.icon
        |subreddits
    .ui.left.icon.input
        i.search.icon
        +inputAutocomplete settings=settings id="search" class="" autofocus='' autocomplete="off" 
    if selected_subreddits
        each selected_subreddits
            .unselect_subreddit.ui.active.circular.button
                strong #{this}
    each all_subreddits
        .ui.compact.circular.button.select_subreddit
            | #{this.name}
            small #{this.count}

