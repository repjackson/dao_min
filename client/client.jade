head
    title dao
    meta(name='viewport', content='user-scalable=yes, initial-scale=1.0, maximum-scale=1.0, width=device-width')
    meta(name='apple-mobile-web-app-capable', content='yes')
    meta(name='apple-mobile-web-app-status-bar-style', content='black')
    meta(name="msapplication-TileColor" content="#da532c")
    meta(name="theme-color" content="#000000")
    link(rel='stylesheet' type='text/css' href='https://cdn.jsdelivr.net/npm/fomantic-ui@2.7.4/dist/semantic.min.css')
    link(href="https://fonts.googleapis.com/css?family=Ubuntu:300,400&display=swap" rel="stylesheet")

    script(src='https://cdn.jsdelivr.net/npm/jquery@3.3.1/dist/jquery.min.js')
    script(src='https://cdn.jsdelivr.net/npm/fomantic-ui@2.7.4/dist/semantic.min.js')


template(name='layout')
    +nav
    +yield



template(name='not_found')
    .ui.center.aligned.padded.segment
        .ui.center.aligned.header page not found
        a.ui.button(href="/") 
            i.home.icon
            |home




template(name='voting_full')
    i.thumbs.up.big.circular.link.upvote.icon(class=upvote_class)
    i.thumbs.down.big.circular.link.downvote.icon(class=downvote_class)




template(name='nav')
    .ui.grid
        .row
            .center.aligned.sixteen.wide.column
                a.ui.icon.large.circular.button(href='/')
                    i.yin.yang.large.icon
                .ui.big.circular.label  
                    +loginButtons     
                if currentUser      
                    .ui.icon.circular.button.add_concept(title='add concept')
                        i.large.plus.icon   


template(name='home')                    
    .ui.stackable.padded.grid
        if currentUser 
            .one.column.row
                .column
                    each unanswered_concepts
                        +concept_segment
        .one.column.row
            .center.aligned.column
                +concept_cloud
                .ui.big.link.list 
                    each docs 
                        a.item(href="/concept/#{_id}/view") #{title}



template(name='concept_cloud')
    //- #cloud
    .ui.inline.grey.header
        i.user.outline.icon
    if selected_upvoters
        #clear_upvoters.ui.active.icon.large.compact.button
            i.remove.icon
        each selected_upvoters
            .unselect_upvoter.ui.active.large.compact.button
                strong #{this}
    each all_upvoters
        .ui.large.compact.button.select_upvoter(class=cloud_upvoter_class) 
            strong #{this.name}
    .spacer
    .ui.inline.grey.header
        i.tag.icon
    .ui.left.icon.input
        i.search.icon
        input#search(type='text' placeholder='search' autocomplete="off")
        //- +inputAutocomplete settings=settings id="search" class="" autocomplete="off"            
    if selected_tags
        #clear_tags.ui.active.icon.circular.large.compact.button
            i.remove.icon
        each selected_tags
            .unselect_tag.ui.active.circular.large.compact.button
                strong #{this}
    each all_tags
        .ui.circular.large.compact.button.select_tag(class=cloud_tag_class) 
            strong #{this.name}


template(name='concept_segment')
    //- .ui.card    
    .ui.center.aligned.segment
        .ui.large.header #{title}
        +response_edit
        



template(name='concept_view')
    with current_doc
        .ui.stackable.padded.grid
            .centered.row
                .ten.wide.center.aligned.column
                    .ui.large.inline.header #{title}
                    if can_edit
                        a.ui.icon.circular.button(href="/concept/#{_id}/edit")
                            i.pencil.icon
                        //- +remove_button
                    //- +voting_full
            .centered.row
                .fifteen.wide.column            
                    each tags 
                        .ui.large.label #{this}
            .centered.row
                .ten.wide.column   
                    .ui.header my response
                    +response_edit
                    .ui.header tag responses
                    each responses 
                        .ui.segment 
                            each tags 
                                .ui.large.label #{this}
                            .ui.header by #{_author_username}
                                

template(name='concept_edit')
    with current_doc
        .ui.stackable.padded.grid
            .centered.row
                .ten.wide.center.aligned.column 
                    .ui.inline.header 
                        | edit '#{title}'
                    a.ui.big.icon.circular.button(href="/concept/#{_id}/view" title='save')
                        //- |save
                        i.big.checkmark.icon
                    +remove_button
            .centered.row
                .fifteen.wide.column 
                    .ui.inline.grey.header concept
                    .ui.fluid.big.input
                        input.edit_title(type='text' value=title autocomplete="off")
    
    
template(name='response_edit')
    unless my_response 
        .ui.button.add_response
            |add response
    else 
        with my_response 
            .ui.inline.grey.header tags
            .ui.icon.input
                i.plus.icon
                input.new_tag(type='text' autocomplete="off")
            each tags
                +tag_button
            +remove_button
                
template(name='tag_button')                
    .ui.large.label
        i.delete.icon.remove_tag
        |#{this}
                    



template(name='remove_button')
    .ui.icon.circular.button.remove_doc
        i.remove.icon
