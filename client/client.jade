template(name='html_edit')
    .ui.form
        .field
            label 
                if icon
                    +ismall name=icon classes='ui middle aligned image'
                if title
                    |#{title}
                else if label
                    |#{label}
                else if key
                    |#{key}
                else
                    |#{this}
