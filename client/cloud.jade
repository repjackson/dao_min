template(name='cloud')
    div
    i.tag.large.grey.icon(title='themes')
    .ui.left.icon.transparent.input
        i.search.icon
        if selected_tags
            +inputAutocomplete settings=tag_settings id="tag_search" class="" autofocus='' autocomplete="off" 
        else
            input#tag_search(type='text' autofocus='' autocomplete="off")
    if selected_tags
        //- #clear_tags.ui.active.icon.compact.button
        //-     i.remove.icon
        each selected_tags
            .unselect_tag.ui.active.compact.button
                strong #{this}
    each all_tags
        .ui.compact.large.button.select_tag(class=cloud_tag_class title=count) 
            | #{this.name}
            if is_admin
                small #{this.count}
    
