template(name='home')
    +cloud
    each docs
        .ui.header #{title}
        |!{body}
        each tags
            .ui.label #{this}
        a.ui.fluid.button(href="/m/post/#{_id}/view")
            |view



template(name='cloud')
    .ui.left.icon.input
        i.search.icon
        +inputAutocomplete settings=settings id="search" class="" autocomplete="off" 
    if selected_tags
        #clear_tags.ui.active.icon.circular.large.button
            i.remove.icon
        each selected_tags
            .unselect_tag.ui.active.circular.large.button
                strong #{this}
    each all_tags
        .ui.compact.circular.large.button.select_tag(class=cloud_tag_class) 
            strong #{this.name}

template(name='tag_result')
    .ui.label #{name}
