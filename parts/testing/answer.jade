template(name='answer_session_segment')
    //- .ui.card
    .ui.segment
        img.ui.fluid.image(src="{{c.url answer_session_image_id width=400 height=200 crop='fill'}}")
        .content
            a.ui.header(href="/answer_session/#{_id}/view") #{title}
            each tags
                .ui.basic.label #{this}



template(name='answer_session_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    unless complete
                        .ui.fluid.button.cancel_answer_session
                            i.ban.icon
                            |cancel
                .eight.wide.column
                    with question
                        .ui.header.f7 #{title}
                    with question 
                        +image_view key='image_id' label='image' direct=true

                    if is_multiple_choice
                        each choices
                            .ui.large.fluid.button.select_choice(class=choice_select_class)
                                .ui.small.header !{content}
                    else if is_number_test
                        if complete 
                            .ui.small.grey.header your answer
                            .ui.circular.segment 
                                +number_view key='number_answer' label='answer' direct=true
                        else 
                            +number_edit key='number_answer' direct=true
                    else if is_text_answer
                        if complete 
                            .ui.small.grey.header your answer
                            .ui.circular.segment 
                                +text_view key='text_answer' label='answer' direct=true
                        else 
                            +text_edit key='text_answer' label='answer' direct=true
                    else if is_essay_answer
                        if complete 
                            .ui.small.grey.header your answer
                            .ui.segment 
                                +textarea_view key='essay_answer' label='answer' direct=true
                        else 
                            +textarea_edit key='essay_answer' label='answer' direct=true
                            +call_watson mode='text' key='essay_answer'
                            if watson 
                                +watson_view
                    else if is_tagging_answer
                        .ui.inline.small.grey.header tags
                        |#{tags.length} your tags
                        .ui.icon.input
                            i.plus.icon
                            input.new_tag(type='text' autofocus="")
                            //- +clear_value                
                        each tags
                            .ui.large.basic.label
                                i.delete.icon.remove_tag
                                |#{this}
                        .ui.divider
                        |#{matching_tags_amount} matching tags #{matching_tags_percent}%
                        .ui.progress(data-percent=matching_tags_percent title="{{to_percent matching_tags_percent}}% matched")
                            .bar
                            .progress
                                .label {{matching_tags_percent}}% matched 

                        .ui.divider
                        with question 
                            |#{tags.length} original tags
                            each required_answer_tags
                                .ui.large.basic.label
                                    |#{this}
                        //- +array_edit key='tags' label='tags' direct=true
                .four.wide.column
                    unless complete
                        if has_answered
                            .ui.big.fluid.button.submit_answer(class=loading_class)
                                |submit
                                i.right.chevron.icon
                    if complete 
                        .ui.header complete
                        if is_multiple_choice
                            if question.has_correct_answer
                                if is_correct_answer
                                    //- i.checkmark.icon
                                    .ui.header correct 
                                else 
                                    //- i.remove.icon 
                                    .ui.header incorrect
                            div
                        else 
                            if question.has_correct_answer
                                if is_correct_answer
                                    .ui.header 
                                        i.checkmark.icon
                                        | correct 
                                else 
                                    .ui.header 
                                        i.remove.icon 
                                        | incorrect
                                div
                        a.ui.fluid.large.button(href="/answer_session/#{_id}/view")
                            |answer details




template(name='answer_session_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    a.ui.fluid.button(href="/question/#{question._id}/view")
                        i.chevron.left.icon
                        |question
                        //- |#{question.title}
                    .ui.small.header by #{_author_username} #{when}
                    with question 
                        +image_view key='image_id' label='image' direct=true
                    if is_dev
                        a.ui.fluid.button(href="/answer_session/#{_id}/edit")
                            i.shield.icon
                            |edit
                    if question.has_correct_answer
                        if is_correct_answer
                            .ui.header correct
                        else
                            .ui.header incorrect
                        
                .twelve.wide.column
                    .ui.grey.header viewing answer session
                    with question
                        .ui.header.f7 #{title}
                    if is_multiple_choice
                        each choices
                            .ui.large.label.select_choice(class=choice_select_class)
                                .ui.header !{content}
                        div
                    else if is_number_test
                        +number_view key='number_answer' direct=true
                    else if is_text_answer
                        if complete 
                            .ui.segment 
                                +text_view key='text_answer' label='answer' direct=true
                    else if is_essay
                        .ui.segment 
                            +textarea_view key='essay_answer' label='answer' direct=true
                            if watson 
                                +watson_view

                    +comments
