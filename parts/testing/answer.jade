            strong #{this.name}



template(name='answer_session_segment')
    //- .ui.card
    .ui.segment
        img.ui.fluid.image(src="{{c.url answer_session_image_id width=400 height=200 crop='fill'}}")
        .content
            a.ui.header(href="/answer_session/#{_id}/view") #{title}
            each tags
                .ui.basic.label #{this}



template(name='answer_session_edit')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    unless complete
                        .ui.fluid.button.cancel_answer_session
                            i.ban.icon
                            |cancel
                .eight.wide.column
                    with parent_question
                        .ui.header.f7 #{title}
                    if is_multiple_choice_answer
                        each choices
                            .ui.large.fluid.button.select_choice(class=choice_select_class)
                                .ui.header !{content}
                    else if is_number_answer
                        if complete 
                            .ui.small.grey.header your answer
                            .ui.circular.segment 
                                +number_view key='number_answer' label='answer' direct=true
                        else 
                            +number_edit key='number_answer' direct=true
                    else if is_text_answer
                        if complete 
                            .ui.small.grey.header your answer
                            .ui.circular.segment 
                                +text_view key='text_answer' label='answer' direct=true
                        else 
                            +text_edit key='text_answer' label='answer' direct=true
                    else if is_essay_answer
                        if complete 
                            .ui.small.grey.header your answer
                            .ui.segment 
                                +textarea_view key='essay_answer' label='answer' direct=true
                        else 
                            +textarea_edit key='essay_answer' label='answer' direct=true
                            +call_watson mode='text' key='essay_answer'
                            if watson 
                                +watson_view
                .four.wide.column
                    unless complete
                        if has_answered
                            .ui.big.fluid.button.submit_answer(class=loading_class)
                                |submit
                                i.right.chevron.icon
                    if complete 
                        .ui.header complete
                        if is_multiple_choice_answer
                            if question.correct_answer
                                if correct_answer
                                    i.checkmark.icon
                                    |right 
                                else 
                                    i.remove.icon 
                                    | wrong
                        else 
                            if correct_answer
                                .ui.header 
                                    i.checkmark.icon
                                    |right 
                            else 
                                .ui.header 
                                    i.remove.icon 
                                    | wrong
                            div
                        a.ui.button(href="/answer_session/#{_id}/view")
                            |answer details




template(name='answer_session_view')
    with current_doc
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    a.ui.fluid.button(href="/question/#{question._id}/view")
                        i.chevron.left.icon
                        |question
                        //- |#{question.title}
                    .ui.small.header by #{_author_username} #{when}
                    
                    +image_view key='answer_session_image_id' label='image' direct=true
                    if is_dev
                        a.ui.fluid.button(href="/answer_session/#{_id}/edit")
                            i.shield.icon
                            |edit
                    if correct_answer
                        .ui.header correct
                    else
                        .ui.header incorrect
                        
                .twelve.wide.column
                    .ui.grey.header viewing answer session
                    with parent_question
                        .ui.header.f7 #{title}
                    if is_multiple_choice_answer
                        each choices
                            .ui.large.disabled.fluid.button.select_choice(class=choice_select_class)
                                .ui.header !{content}
                    else if is_number_answer
                        +number_view key='number_answer' direct=true
                    else if is_text_answer
                        if complete 
                            .ui.segment 
                                +text_view key='text_answer' label='answer' direct=true
                    else if is_essay_answer
                        .ui.segment 
                            +textarea_view key='essay_answer' label='answer' direct=true
                            if watson 
                                +watson_view

                    +comments
