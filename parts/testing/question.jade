template(name='questions')
    .ui.stackable.padded.grid
        .row
            .six.wide.column
                .ui.inline.header 
                    |questions
                .ui.icon.button.add_question(title='add question')
                    i.plus.icon
                +question_cloud
            .ten.wide.column
                .ui.button answered
                .ui.button unanswered
                each questions
                    +question_segment


