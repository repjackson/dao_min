template(name='profile_layout')
    +nav
    with current_user
        .ui.stackable.padded.grid
            .row
                .four.wide.column
                    //- .ui.fluid.button.toggle_size
                    //-     i.bars.icon
                    img.ui.centered.small.circular.profile_image.image(src="{{c.url current_user.profile_image_id height=200 width=200 gravity='face' crop='fill'}}")
                    .ui.center.aligned.basic.segment
                        //- a(href="/user/#{user.username}")
                        .ui.center.aligned.header
                            | #{user.first_name} #{user.last_name}
                            //- .ui.small.header @#{user.username}        
                        //- a.ui.large.button.logout_other_clients(href="#" title='logout other clients')
                        //-     //- i.globe.icon
                        //-     +ismall name='globe' 
                        //-     |log out other clients
                    
                    .ui.fluid.vertical.menu.scrolling
                        a.item(href="/user/#{user.username}/money" class="{{isActiveRoute regex=user_money}}")
                            i.money.grey.icon
                            |money
                        a.item(href="/user/#{user.username}/tags" class="{{isActiveRoute regex=user_tags}}")
                            i.tags.icon
                            |tags
                        a.item(href="/user/#{user.username}/social" class="{{isActiveRoute regex=user_social}}")
                            i.chat.icon
                            |social
                        a.item(href="/user/#{user.username}/offers" class="{{isActiveRoute regex=user_social}}")
                            i.chat.icon
                            |offers
                        a.item(href="/user/#{user.username}/messages" class="{{isActiveRoute regex=user_mail}}")
                            i.envelope.icon
                            |messages
                        a.item(href="/user/#{user.username}/posts" class="{{isActiveRoute regex=user_posts}}")
                            i.blog.icon
                            |posts
                    if is_current_user
                        a.ui.large.fluid.button(href="/user/#{current_user._id}/edit")
                            i.cog.grey.icon
                            |profile
                        a.ui.fluid.button.logout(href="#")
                            i.sign.out.alternate.icon
                            |log out

                    if is_admin
                        .ui.basic.segment
                            .ui.header 
                                i.shield.icon
                                //- +i name='shield' classes='ui mini inline image'
                                |roles
                            each roles
                                .ui.basic.label #{this}
                .twelve.wide.column
                    //- each user_sections
                    //-     a.ui.button(href="/user/#{user.username}/")
                    //-         //- i.icon(class=icon)
                    //-         +ismall name=icon
                    //-         |#{title}

                    +yield    
    +footer
                
                    
