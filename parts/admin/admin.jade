template(name='admin_layout')
    img.ui.fluid.image.checkin_banner(src="{{c.url 'frontrange' width=1000 height=1000 crop='crop'}}")    
    +nav
    .ui.stackable.padded.grid
        .row
            .three.wide.column
                .ui.header 
                    i.shield.icon
                    |admin
                .ui.vertical.fluid.large.menu
                    a.item(href="/dashboard" class="{{isActivePath '/dashboard'}}")
                        i.dashboard.grey.icon
                        | dashboard
                .ui.vertical.fluid.large.menu
                    a.item(href="/tasks" class="{{isActivePath '/tasks'}}")
                        i.tasks.grey.icon
                        | tasks
                    a.item(href="/users" class="{{isActivePath '/users'}}")
                        i.users.grey.icon
                        | users
                    a.item(href="/minutes" class="{{isActivePath '/minutes'}}")
                        i.clock.grey.icon 
                        |meeting minutes
                    a.item(href="/projects" class="{{isActivePath '/projects'}}")
                        i.line.chart.grey.icon 
                        |projects
                    a.item(href="/finance" class="{{isActivePath '/finance'}}")
                        i.money.grey.icon 
                        |finance
                    a.item(href="/dev_blog" class="{{isActivePath '/dev_blog'}}")
                        i.blog.grey.icon
                        | dev blog
                    a.item(href="/feed" class="{{isActivePath '/feed'}}")
                        i.rss.grey.icon
                        | feed
                    a.item(href="/bugs" class="{{isActivePath '/bugs'}}")
                        i.bug.grey.icon
                        | bugs
                .ui.header admins
                .ui.list
                    each admins 
                        .item #{name}
        
            .thirteen.wide.column
                +yield
    +footer
            
            
template(name='admin')
    .ui.header admin       
    .ui.header clean tag 
    .ui.input.clean_tag(type='text' placeholder='tag')     
                
                                
template(name='dev_blog')
    .eight.wide.column
        .ui.button.add_post
            i.plus.icon
            |post
        .ui.header
            i.blog.icon
            |admin blog
        each admin_posts
            .ui.header #{content}



template(name='latest_activity')
    .ui.grey.header 
        i.grey.rss.icon
        |all activity
    .ui.list
        each latest_activity
            .item 
                img.ui.avatar.image(src="{{c.url author.image_id width=200 height=200 gravity='face' crop='fill'}}")
                |#{text} #{body} 
                .ui.basic.label #{log_type}
                small #{when}
